<div class="container">
<h3>商品一覧(全<%= @items.count %>件)</h3>
<div class= "row d-flex justify-content-around">
<% @items.each do |item| %>
<table>
 <tr>
  <td>
   <%= link_to item_path(item) do %>
   <%= attachment_image_tag item, :image, :fill, 200, 100, format: 'jpeg', fallback: "no_image.jpg", size:'200×100' %>
   <% end %>
  </td>
 </tr>
 <tr>
  <td>
   <%= item.name %>
  </td>
 </tr>
 <tr>
  <td>
    ￥<%= item.price %>
  </td>
 </tr>
</table>
<% end %>
</div>

<%= paginate @items %>
