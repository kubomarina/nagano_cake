

<h3>商品一覧(全件)</h3>
<% @items.each do |item| %>
  <div class= "justify-content-around">
  <%= link_to public_item_path(item) do %>
  <%= attachment_image_tag @item, :image_id, :fill, 200, 100, format: 'jpeg', fallback: "no_image.jpg", size:'200×100' %><br>
  <% end %>
     <%= item.name %><br>
     ￥<%= item.price %>
  </div>
<% end %>
