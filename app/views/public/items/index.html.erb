
<div class="container">
 <div class="row">
<h3>商品一覧(全件)</h3>
<div class="d-flex justify-content-around">
<% @items.each do |item| %>
  <%= link_to public_item_path(item) do %>
  <%= attachment_image_tag @item, :image_id, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'60×80' %>
  <% end %>
  <table>
   <tr>
     <td><%= item.name %></td>
     <td>￥<%= item.price %></td>
   </tr>
  </table>
<% end %>
</div>
</div>
</div>