<h3>注文履歴一覧</h3>
<table class="table table-hover table-inverse">
  <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払い金額</th>
    <th>注文詳細</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= public_order.created_at %></td>
    <td>
      〒<%= public_order.postal_code %></br>
      <%= public_order.address %></br>
      <%= public_order.name %></br>
    </td>
    <td><%= public_item.name %></td>
    <td><%= public_order.total_payment %></td>
  </tr>