<h4>注文情報確認</h4>
<div class="container">
 <div class="row">
  <div class="col-lg-8">
   <table class="table table-bordered">
    <thead class ="thead-light">
     <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
     </tr>
    </thead>
<% @cart_items.each do |cart_item| %>
 <tr>
  <td><%= cart_item.item.name %></td>
  <td><%= (cart_item.item.price*1.1).round %></td>
  <td><%= cart_item.amount %></td>
  <td><%= (cart_item.item.price * 1.1 * cart_item.amount).round %></td>
 </tr>
<% end %>
</table>
</div>
 <% @sum = 0 %>
<div class="col-lg-4">
 <table class="table table-bordered">
  <thead class="thead-light">
   <tr>
    <th>送料</th>
    <td><%= @order.shipping_cost %></td>
   </tr>
   <tr>
    <th>商品合計</th>
    <td><%= @total_item_price %></td>
   </tr>
   <tr>
    <th>請求金額</th>
    <td><%= @total_payment %></td>
   </tr>
 </thead>
</table>
</div>
<div class="col-12">
 <table class="table-borderless">
  <tr>
   <th>支払方法</th>
   <td><%= @order.payment_method %></td>
  </tr>
 </table>
 <table>
  <tr>
   <th>お届け先</th>
   <td>〒<%= @order.postal_code %><%= @order.address %></td>
   <td><%= @order.name %></td>
  </tr>
</table>
</div>
 <div class="col-12">
  <div class="mx-auto">
   <%= form_with model: [:public,@order], method: :post, url: orders_path, local:true do |f| %>
   <%= f.hidden_field :payment_method %>
   <%= f.hidden_field :postal_code %>
   <%= f.hidden_field :address %>
   <%= f.hidden_field :name %>
   <%= f.hidden_field :total_payment %>
   <button class="btn btn-success" type="submit">注文を確定する</button>
   <% end %>
  </div>
 </div>
</div>
</div>

