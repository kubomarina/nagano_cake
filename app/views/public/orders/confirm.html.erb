<h4>注文情報確認</h4>
<table class="table table-hover table-inverse">
 <tr>
  <th>商品名</th>
  <th>単価(税込)</th>
  <th>数量</th>
  <th>小計</th>
 </tr>

 <% @cart_items.each do |cart_item| %>
 <tr>
  <td><%= cart_item.item.name %></td>
  <td><%= cart_item.item.price*1.1 %></td>
  <td><%= cart_item.amount %></td>
  <td><%= cart_item.item.price * 1.1 * cart_item.amount %></td>
 </tr>
<% end %>
</table>
 <% @sum = 0 %>
<table class="table table-hover table-inverse">
 <tr>
  <th>送料</th>
  <td><%= shipping_cost %></td>
 </tr>
 <tr>
  <th>商品合計</th>
  <th><%#= @sum += @cart_item.item.price * @cart_item.amount %></th>
  <td><%= @total_item_price %></td>
 </tr>
 <tr>
  <th>請求金額</th>
  <th><%#= @sum += @cart_item.item.price * @cart_item.mount %></th>
  <td><%= @total_payment %></td>
 </tr>
</table>

<table>
 <tr>
  <th>支払方法</th>
 </tr>
  <td><%= @order.payment_method %></td>
 </tr>
</table>
<table>
 <tr>
  <th>お届け先</th>
  <th></th>
 </tr>
 <tr>
   <td>〒<%= @order.postal_code %><%= @order.address %><br>
   <%= @order.name %></td>
 </tr>
</table>
<%= form_with model: [:public,@order], method: :post, url: public_order_path local:true do |f| %>
 <%= f.hidden_field :payment_method %>
 <%= f.hidden_field :postal_code %>
 <%= f.hidden_field :address %>
 <%= f.hidden_field :name %>
 <%= f.hidden_field :total_payment %>
 <%= f.submit "確定" %>
 <% end %>
