<h3>注文履歴詳細</h3>
<h6>注文情報<h6>
<table class="table table-hover table-inverse">
  <tr>
    <th>注文日</th>
    <th><%= @order.created_at %></th>
  </tr>
  <tr>
    <th>配送先</th>
    <th>
      〒<%= @order.postal_code %>
      <%= @order.address %>
      <%= @order.name %>
    </th>
  </tr>
  <tr>
    <th>支払方法</th>
    <th><%= @order.payment_method %></th>
  </tr>
  </table>

    <h6>注文内容</h6>
     <table class="table table-hover table-inverse">
       <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
       </tr>
        <% @sum = 0 %>
       <% @cart_items.each do |cart_item| %>
       <tr>
         <td><%= cart_item.item.name %></td>
         <td><%= cart_item.item.price*1.1 %></td>
         <td><%= cart_item.amount %></td>
         <td><%= cart_item.item.price * order.cart_item.amount %></td>
       </tr>
       <% end %>
      </table>

      <table class="table table-hover table-inverse">
        <h6>請求情報</h6>
    <tr>
      <th>商品合計</th>
      <td>
        <%= @total_item_price %>
      </td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= shipping_cost %></td>
    </tr>
    <tr>
      <th>ご請求額</th>
      <td><%= @total_payment %></td>
    </tr>
    </table>


