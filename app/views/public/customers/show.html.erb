<h3>マイページ</h3>

<p>登録情報</p>
<%= link_to edit_public_customer_path(@customer) do %>
<button class= "btn btn-success" %>編集する</button>
<% end %>

<table class="table table-hover table-inverse">
  <tr>
    <th>氏名<th>
    <td><%= @customer.last_name %><%= @customer.first_name %></td>
  </tr>
  <tr>
    <th>カナ<th>
    <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号<th>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <th>住所<th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号<th>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス<th>
    <td><%= @customer.email %></th>
  </tr>
  </table>
  

  <p>注文履歴
  <%= link_to public_orders_path do %>
  <i class ="btn btn-primary">一覧を見る</i>
  <% end %>
