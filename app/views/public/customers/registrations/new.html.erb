<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %>
    <h4>(姓)</h4><%= f.text_field :last_name, autofocus: true %>
    <h4>(名)</h4><%= f.text_field :first_name, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :フリガナ %>
    <h4>(セイ)</h4><%= f.text_field :last_name_kana, autofocus: true %>
    <h4>(メイ)</h4><%= f.text_field :first_name_kana, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :郵便番号（ハイフンなし）%>
    <%= f.email_field :postal_code, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :住所 %>
    <%= f.email_field :address, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.email_field :telephone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>

<h3>すでに登録済みの方</h3>
<h4><%= link_to "こちら", new_customer_session_path %>からログインしてください。</h4>