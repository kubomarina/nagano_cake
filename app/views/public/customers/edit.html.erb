<div class="container">
 <div class="row">
  <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
<h3>会員情報編集</h3>
<%= form_with model:[:public,@customer], local:true do |f| %>
<table>
 <tr>
  <th>氏名</th>
  <th><%= f.text_field :last_name %><%= f.text_field :first_name %></th>
 </tr>
 <tr>
 <th>フリガナ</th>
 <th><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></th>
 </tr>
 <th>郵便番号</th>
 <th><%= f.text_field :postal_code %></th>
 </tr>
 <th>住所</th>
 <th><%= f.text_field :address %></th>
 </tr>
 <tr>
 <th>電話番号</th>
 <th><%= f.text_field :telephone_number %></th>
 </tr>
 <tr>
 <th>メールアドレス</th>
 <th><%= f.text_field :email %></th>
 </tr>
</table>
 <button class= "btn btn-secondary" type="submit">編集内容を保存</button>
 <% end %>

 <p>退会する</p>
</div>
</div>
</div>