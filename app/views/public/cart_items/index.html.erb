

<h4>ショッピングカート</h4>
<table class="table table-hover table-inverse">
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
  <% @sum = 0 %>
  <% @cart_items.each do |cart_item| %>
  <tr>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.item.price %></td>
    <td><%= cart_item.amount %></td>
    <td><%= cart_item.item.price * cart_item.amount %>
        <% @sum += cart_item.item.price * cart_item.amount %></td>
    <td><%= link_to "削除する", public_cart_item_path(cart_item), method: :delete %></td>
  </tr>
  <% end %>
 </table>
 <table>
   <tr>
   <th>合計金額</th>
   <th><%= @sum %></th>
   </tr>
 </table>
<%= link_to "買い物を続ける", public_items_path %>
<%= link_to "情報入力に進む", new_public_order_path %>
<%= button_to "カートを空にする", cart_items_destroy_all_path, method: :delete %>
