<div class="container">
 <div slass="row">
  <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
<h3>会員一覧</h3>
<table class="table table-hover table-inverse">

  <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
   </tr>
   <% @customers.each do |customer| %>
   <tr>
     <td><%= customer.id %></td>
     <td>
       <%= link_to admin_customer_path(customer) do %>
       <%= customer.last_name %><%= customer.first_name %>
       <% end %>
     </td>
     <td><%= customer.email %></td>
     <td><%= customer.is_active %></td>
   <tr>
<% end %>
</table>
</div>
</div>
</div>




