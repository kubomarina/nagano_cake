
<div class="container">
 <div slass="row">
  <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
    <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
<table class="table table-hover table-inverse">
  <tr>
    <th>会員ID</th>
    <th><%= @customer.id %></th>
  </tr>
  <tr>
    <th>氏名</th>
    <th><%= @customer.last_name %><%= @customer.first_name %></th>
  </tr>
  <tr>
    <th>郵便番号</th>
    <th><%= @customer.postal_code %></th>
  </tr>
  <tr>
    <th>住所</th>
    <th><%= @customer.address %></th>
  </tr>
  <tr>
    <th>電話番号</th>
    <th><%= @customer.telephone_number %></th>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <th><%= @customer.email %></th>
  </tr>
 </table>

 <%= link_to edit_admin_customer_path do %>
 <button class="btn btn-success">編集する</button>
 <% end %>

 </div>
 </div>
 </div>