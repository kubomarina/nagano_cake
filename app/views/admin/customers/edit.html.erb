<h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
<div class="container">
 <div slass="row">
  <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
<table>
<%= form_with model: [:public,@customer], local:true do |f| %>
<tr>
 <th>会員ID</th>
 <th><%= @customer.id %></th>
</tr>
<tr>
 <th>氏名</th>
 <th><%= f.text_field :last_name %></th>
 <th><%= f.text_field :first_name %></th>
</tr>
<tr>
 <th>フリガナ</th>
 <th><%= f.text_field :last_name_kana %></th>
 <th><%= f.text_field :first_name_kana %></th>
<tr>
 <th>郵便番号</th>
 <th><%= f.text_field :postal_code %></th>
</tr>
<tr>
 <th>住所</th>
 <th><%= f.text_field :address %></th>
</tr>
<tr>
 <th>電話番号</th>
 <th><%= f.text_field :telephone_number %></th>
</tr>
<tr>
 <th>メールアドレス</th>
 <th><%= f.text_field :email %></th>
</tr>
<tr>
 <th>会員ステータス</th>
</table>

<button class= "btn btn-secondary" type="submit">変更を保存</button>
<% end %>
</div>
</div>
</div>